<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"

            >
            <LinearLayout
                android:id="@+id/eventDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounder_bg"
                android:visibility="gone"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/artistTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Artists/Teams" />

                            <TextView
                                android:id="@+id/artistValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/parrot_green"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:text="Artists/Teams" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/venueTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Venue" />

                            <TextView
                                android:id="@+id/venueValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/parrot_green"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:text="Venue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/dateTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Date" />

                            <TextView
                                android:id="@+id/dateValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/parrot_green"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:text="Date" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/timeTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Time" />

                            <TextView
                                android:id="@+id/timeValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/parrot_green"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:text="Time" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/genreTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Genres" />

                            <TextView
                                android:id="@+id/genreValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/parrot_green"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/priceTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Price Range" />

                            <TextView
                                android:id="@+id/priceValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/parrot_green"
                                android:layout_weight="1"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/ticketStatusTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="Ticket Status" />

                            <TextView
                                android:id="@+id/ticketStatusValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/buyAtTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="But Ticket At" />

                            <TextView
                                android:id="@+id/buyAtValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/parrot_green"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:text="URL" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/venueImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/parrot_green"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </ScrollView>




</FrameLayout>